<Window x:Class="Policlinnic.UI.Views.DictionaryEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="LblName" Text="Название:" Foreground="Gray" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtName" Height="30" Padding="5" Margin="0,0,0,15"/>

            <StackPanel x:Name="PanelExtra">
                <TextBlock x:Name="LblExtra" Text="Описание:" Foreground="Gray" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtExtra" Height="30" Padding="5" Margin="0,0,0,15"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Width="100" Height="35" 
                        Background="#2E7D32" Foreground="White" BorderThickness="0"
                        Click="BtnSave_Click" Cursor="Hand"/>
                <Button Content="Отмена" Width="80" Height="35" Margin="10,0,0,0"
                        Background="#ECEFF1" BorderThickness="0"
                        Click="BtnCancel_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>