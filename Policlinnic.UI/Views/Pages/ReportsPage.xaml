<Page x:Class="Policlinnic.UI.Views.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Отчеты" Background="White" FontFamily="Segoe UI">

    <Page.Resources>
        <SolidColorBrush x:Key="ThemeColor" Color="#2E7D32"/>
        <SolidColorBrush x:Key="SelectionGreen" Color="#C8E6C9"/>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#607D8B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F8E9"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NonFocusableCellStyle" TargetType="DataGridCell">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="5,0">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExcelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Margin="0,0,0,20" Padding="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                    <TextBlock Text="Тип отчёта" Foreground="#90A4AE" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CmbReportType" Width="300" Height="35" VerticalContentAlignment="Center"
                              SelectionChanged="CmbReportType_SelectionChanged">
                        <ComboBoxItem Content="Финансовый отчёт (Платные услуги)" IsSelected="True"/>
                        <ComboBoxItem Content="История болезни пациента"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel x:Name="PanelPatientSearch" Grid.Column="1" Visibility="Collapsed" VerticalAlignment="Top">
                    <TextBlock Text="Поиск пациента (Введите ФИО или Телефон)" Foreground="#90A4AE" FontSize="12" Margin="0,0,0,4"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtNameSearch" Width="200" Height="35" Padding="5" Margin="0,0,10,0"
                                 VerticalContentAlignment="Center" BorderBrush="#CFD8DC"
                                 TextChanged="TxtPatientSearch_TextChanged"/>

                        <TextBox x:Name="TxtPhoneSearch" Width="150" Height="35" Padding="5" Margin="0,0,10,0"
                                 VerticalContentAlignment="Center" BorderBrush="#CFD8DC"
                                 TextChanged="TxtPatientSearch_TextChanged"/>

                        <Button Content="✕" Width="35" Height="35" 
                                Background="Transparent" BorderBrush="#CFD8DC" BorderThickness="1"
                                Foreground="Gray" FontSize="14" Cursor="Hand"
                                Click="BtnClearSearch_Click" ToolTip="Очистить поиск">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <ListBox x:Name="LstPatientSuggestions" MaxHeight="200" Width="360" Margin="0,2,0,0"
                             Visibility="Collapsed" 
                             BorderBrush="#CFD8DC" Background="White"
                             DisplayMemberPath="DisplayText"
                             SelectedValuePath="Id"
                             SelectionChanged="LstPatientSuggestions_SelectionChanged"
                             HorizontalAlignment="Left">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>

                <Button Grid.Column="3" Content="🖨 В Excel" Style="{StaticResource ExcelButtonStyle}" 
                        VerticalAlignment="Bottom" Click="BtnExport_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="GridPaidServices" Grid.Row="0" Visibility="Visible"
                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEEEEE"
                      Background="White" BorderThickness="0" HeadersVisibility="Column" RowHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="*" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                    <DataGridTextColumn Header="Специализация" Binding="{Binding Spec}" Width="*" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                    <DataGridTextColumn Header="Услуга" Binding="{Binding ServiceName}" Width="1.5*" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                    <DataGridTextColumn Header="Кол-во" Binding="{Binding CountServices}" Width="80" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                    <DataGridTextColumn Header="Доход" Binding="{Binding TotalIncome, StringFormat=C}" Width="100" FontWeight="Bold" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                </DataGrid.Columns>
            </DataGrid>

            <Border x:Name="FooterTotal" Grid.Row="1" Background="#F1F8E9" Padding="15" Margin="0,10,0,0" CornerRadius="4" Visibility="Visible">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="ИТОГО ДОХОД:" FontSize="16" FontWeight="SemiBold" Foreground="#607D8B" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TxtTotalIncome" Text="$0.00" FontSize="20" FontWeight="Bold" Foreground="#2E7D32" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel x:Name="ContainerPatientHistory" Grid.Row="0" Grid.RowSpan="2" Visibility="Collapsed">
                <DataGrid x:Name="GridPatientHistory" 
                          AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEEEEE"
                          Background="White" BorderThickness="0" HeadersVisibility="Column" RowHeight="40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата" Binding="{Binding DateVisit, StringFormat=dd.MM.yyyy}" Width="90" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                        <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="*" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                        <DataGridTextColumn Header="Спец." Binding="{Binding Spec}" Width="120" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                        <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" Width="1.5*" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                        <DataGridTextColumn Header="Лекарство" Binding="{Binding Medicine}" Width="*" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                        <DataGridTextColumn Header="Лечение" Binding="{Binding TreatmentInfo}" Width="*" CellStyle="{StaticResource NonFocusableCellStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>