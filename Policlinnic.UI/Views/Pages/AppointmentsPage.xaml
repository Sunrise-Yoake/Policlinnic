<Page x:Class="Policlinnic.UI.Views.Pages.AppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="Приёмы" Background="White" FontFamily="Segoe UI" FontSize="14" d:DesignWidth="1100" d:DesignHeight="750">

    <Page.Resources>
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DCEDC8"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="#33691E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnIconGreen" TargetType="Button">
            <Setter Property="Background" Value="#A5D6A7"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="6,3">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BtnIconRed" TargetType="Button">
            <Setter Property="Background" Value="#FFCDD2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="6,3">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="TxtGridHeader" Text="Все приёмы" FontSize="22" FontWeight="SemiBold" Foreground="#2E7D32"/>
                <Button x:Name="BtnCleanOld" Content="🧹 Удалить прошедшие пустые" Margin="20,0,0,0" 
                        Background="#FFF3E0" Foreground="#E65100" BorderThickness="0" Padding="10,5" Cursor="Hand"
                        Click="BtnCleanOld_Click" Visibility="Collapsed"/>
            </StackPanel>

            <Border x:Name="PanelTopFilter" Background="#F1F8E9" Padding="10" CornerRadius="4" BorderBrush="#C5E1A5" BorderThickness="1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Фильтр:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <TextBlock Text="Врач:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="CmbFilterDoctor" Width="200" DisplayMemberPath="FullName" SelectedValuePath="ID" 
                              SelectionChanged="Filter_Changed" Margin="0,0,15,0"/>

                    <CheckBox x:Name="ChkFilterFree" Content="Только свободные" VerticalAlignment="Center" 
                              Checked="Filter_Changed" Unchecked="Filter_Changed" Margin="0,0,15,0"/>

                    <Button Content="Сброс" Click="BtnResetFilter_Click" Background="Transparent" BorderThickness="0" TextElement.Foreground="Gray" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <DataGrid x:Name="GridMain" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                  Background="White" BorderBrush="#EEEEEE" BorderThickness="1" 
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEEEEE" 
                  RowHeight="40" HeadersVisibility="Column">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата и Время" Binding="{Binding DisplayDate}" Width="160"/>
                <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="*"/>
                <DataGridTextColumn Header="Кабинет" Binding="{Binding Cabinet}" Width="80"/>
                <DataGridTextColumn x:Name="ColPatient" Header="Пациент" Binding="{Binding PatientName}" Width="220"/>

                <DataGridTemplateColumn x:Name="ColActions" Header="Действия" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource BtnIconGreen}" Click="BtnEdit_Click" ToolTip="Редактировать">
                                    <TextBlock Text="✏"/>
                                </Button>
                                <Button Style="{StaticResource BtnIconRed}" Click="BtnDelete_Click" ToolTip="Удалить">
                                    <TextBlock Text="❌"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border x:Name="PanelAdmin" Grid.Row="2" Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1" 
                Padding="15" Margin="0,15,0,0" CornerRadius="4" Visibility="Visible">
            <StackPanel>
                <TextBlock Text="Управление слотами" FontWeight="Bold" Foreground="#455A64" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Врач" FontSize="11" Foreground="Gray"/>
                        <ComboBox x:Name="CmbAdminDoctor" Width="200" DisplayMemberPath="FullName" SelectedValuePath="ID"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Дата (ДД.ММ.ГГГГ ЧЧ:ММ)" FontSize="11" Foreground="Gray"/>
                        <TextBox x:Name="TxtNewDate" Width="140" Height="26" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Кабинет" FontSize="11" Foreground="Gray"/>
                        <TextBox x:Name="TxtNewCabinet" Width="60" Height="26" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,5,0">
                        <TextBlock Text="Телефон" FontSize="11" Foreground="Gray"/>
                        <TextBox x:Name="TxtSearchPhone" Width="100" Height="26" VerticalContentAlignment="Center" KeyUp="Search_KeyUp"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="ФИО Пациента (Поиск)" FontSize="11" Foreground="Gray"/>
                        <ComboBox x:Name="CmbSearchPatient" Width="180" Height="26" IsEditable="True" 
                                  DisplayMemberPath="DisplayText" SelectedValuePath="Id"
                                  IsTextSearchEnabled="False" KeyUp="Search_KeyUp"/>
                    </StackPanel>

                    <Button Content="💾 Сохранить" Background="#1976D2" Foreground="White" Padding="15,4" BorderThickness="0" Click="BtnAddSlot_Click"/>
                    <Button x:Name="BtnCancelEdit" Content="Отмена" Background="Gray" Foreground="White" Padding="10,4" BorderThickness="0" Margin="5,0,0,0" Visibility="Collapsed" Click="BtnCancelEdit_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock Text="Отмена дня:" VerticalAlignment="Center" Foreground="#D32F2F" Margin="0,0,10,0" FontSize="12"/>
                    <DatePicker x:Name="DpCancelDay" Width="120" Margin="0,0,10,0"/>
                    <Button Content="Очистить расписание врача" Background="#FFEBEE" Foreground="#D32F2F" BorderBrush="#FFCDD2" Padding="10,3" Click="BtnCancelDay_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border x:Name="BorderDivider" Grid.Row="3" Height="1" Background="#E0E0E0" Margin="0,20"/>

        <Grid x:Name="PanelFreeSlots" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Поиск свободного времени" FontWeight="SemiBold" Foreground="#1565C0" FontSize="16" Margin="0,0,0,15"/>
                <TextBlock Text="Специализация" Foreground="Gray"/>
                <ComboBox x:Name="CmbSpec" DisplayMemberPath="Name" SelectedValuePath="ID" Height="30" SelectionChanged="CmbSpec_SelectionChanged" Margin="0,0,0,15"/>
                <TextBlock Text="Врач" Foreground="Gray"/>
                <ComboBox x:Name="CmbDoctor" DisplayMemberPath="FullName" SelectedValuePath="ID" Height="30" SelectionChanged="CmbDoctor_SelectionChanged" Margin="0,0,0,15"/>
            </StackPanel>
            <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <DataGrid x:Name="GridFreeSlots" AutoGenerateColumns="False" IsReadOnly="True" Background="White" HeadersVisibility="Column" BorderThickness="0" RowHeight="35">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата и Время" Binding="{Binding DisplayDate}" Width="160"/>
                        <DataGridTextColumn Header="Кабинет" Binding="{Binding Cabinet}" Width="100"/>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Записаться" Background="#4CAF50" Foreground="White" Padding="15,5" BorderThickness="0" Click="BtnBook_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>