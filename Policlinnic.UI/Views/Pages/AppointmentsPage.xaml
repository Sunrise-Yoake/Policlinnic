<Page x:Class="Policlinnic.UI.Views.Pages.AppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Приёмы" Background="White" FontFamily="Segoe UI" d:DesignWidth="1000" d:DesignHeight="700">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="PanelPatient" Grid.Row="0" Margin="0,0,0,20" Padding="15" Background="#F1F8E9" CornerRadius="4" Visibility="Collapsed">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Запись на приём" FontWeight="Bold" Foreground="#2E7D32" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <StackPanel x:Name="BlockPatientSelect" Orientation="Horizontal" Visibility="Collapsed">
                        <TextBlock Text="Кого записываем:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="CmbTargetPatient" Width="250" DisplayMemberPath="FullName" SelectedValuePath="ID"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Специализация" Foreground="Gray" FontSize="12"/>
                        <ComboBox x:Name="CmbSpec" Width="200" DisplayMemberPath="Name" SelectedValuePath="ID" SelectionChanged="CmbSpec_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Врач" Foreground="Gray" FontSize="12"/>
                        <ComboBox x:Name="CmbDoctor" Width="250" DisplayMemberPath="FullName" SelectedValuePath="ID" SelectionChanged="CmbDoctor_SelectionChanged"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Доступные слоты:" Margin="0,15,0,5" Foreground="#2E7D32" FontWeight="SemiBold"/>
                <DataGrid x:Name="GridFreeSlots" Height="120" AutoGenerateColumns="False" IsReadOnly="True" Background="White" BorderBrush="#C8E6C9">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата и Время" Binding="{Binding DisplayDate}" Width="150"/>
                        <DataGridTextColumn Header="Кабинет" Binding="{Binding Cabinet}" Width="100"/>
                        <DataGridTemplateColumn Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Записать" Background="#4CAF50" Foreground="White" Padding="10,5" BorderThickness="0" Cursor="Hand" Click="BtnBook_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <Border x:Name="PanelAdmin" Grid.Row="1" Margin="0,0,0,20" Padding="15" Background="#E3F2FD" CornerRadius="4" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Управление расписанием (Админ)" FontWeight="Bold" Foreground="#1565C0" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Врач" Foreground="Gray" FontSize="12"/>
                        <ComboBox x:Name="CmbAdminDoctor" Width="200" DisplayMemberPath="FullName" SelectedValuePath="ID"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Дата (ДД.ММ.ГГГГ ЧЧ:ММ)" Foreground="Gray" FontSize="12"/>
                        <TextBox x:Name="TxtNewDate" Width="160" Height="25" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Кабинет" Foreground="Gray" FontSize="12"/>
                        <TextBox x:Name="TxtNewCabinet" Width="80" Height="25" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <Button Content="➕ Добавить" Background="#1976D2" Foreground="White" Click="BtnAddSlot_Click" Height="25"/>
                </StackPanel>

                <Border Background="#FFEBEE" Padding="10" CornerRadius="4" BorderBrush="#FFCDD2" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠ Отмена дня (Курсор):" VerticalAlignment="Center" FontWeight="Bold" Foreground="#D32F2F" Margin="0,0,10,0"/>
                        <DatePicker x:Name="DpCancelDay" Width="120" Margin="0,0,10,0"/>
                        <Button Content="Очистить день" Background="#D32F2F" Foreground="White" Click="BtnCancelDay_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="TxtGridHeader" Text="Список записей" FontSize="18" FontWeight="SemiBold" Foreground="#455A64"/>
                <Button x:Name="BtnDelete" Content="🗑 Удалить запись" Margin="20,0,0,0" Background="#D32F2F" Foreground="White" Click="BtnDelete_Click" Visibility="Collapsed"/>
            </StackPanel>

            <DataGrid x:Name="GridMain" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="White" RowHeight="35">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата и Время" Binding="{Binding DisplayDate}" Width="140"/>
                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="*"/>
                    <DataGridTextColumn x:Name="ColSpec" Header="Специализация" Binding="{Binding SpecName}" Width="150"/>
                    <DataGridTextColumn x:Name="ColPatient" Header="Пациент" Binding="{Binding PatientName}" Width="180"/>
                    <DataGridTextColumn Header="Кабинет" Binding="{Binding Cabinet}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>