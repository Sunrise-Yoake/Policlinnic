<Page x:Class="Policlinnic.UI.Views.Pages.PatientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Пациенты" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="15" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск пациента:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#757575"/>
                <TextBox x:Name="TxtSearch" Width="300" Height="30" Padding="5" VerticalContentAlignment="Center"
                         TextChanged="TxtSearch_TextChanged"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="PatientsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                  CanUserAddRows="False" GridLinesVisibility="Horizontal" HeadersVisibility="Column" 
                  Background="White" RowHeight="40">
            <DataGrid.Columns>

                <DataGridTemplateColumn Header="ФИО ПАЦИЕНТА" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center" Margin="5,0">
                                <Hyperlink NavigateUri="{Binding IdUser}" RequestNavigate="Hyperlink_RequestNavigate" TextDecorations="None">
                                    <TextBlock Text="{Binding FullName}" FontWeight="Bold" Foreground="#1976D2"/> </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="ТЕЛЕФОН" Binding="{Binding Phone}" Width="120"/>

                <DataGridTextColumn Header="ДАТА РОЖДЕНИЯ" Binding="{Binding BirthDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                <DataGridTextColumn Header="АДРЕС" Binding="{Binding PatientAddress}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>