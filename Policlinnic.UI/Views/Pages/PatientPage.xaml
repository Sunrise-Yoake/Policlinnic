<Page x:Class="Policlinnic.UI.Views.Pages.PatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Patient Mode" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <Border Background="#E8F5E9" CornerRadius="5" Padding="10" Margin="0,0,0,20">
                    <TextBlock Text="Patient&#x0a;ACTIVE SESSION" FontWeight="Bold" Foreground="#2E7D32"/>
                </Border>
                <Button Content="📅 Мои записи" Style="{StaticResource SidebarButton}"/>
                <Button Content="📋 Мои больничные" Style="{StaticResource SidebarButton}"/>
                <Button Content="➕ Записаться к врачу" Style="{StaticResource SidebarButton}"/>
                <Button Content="🚪 ВЫХОД" Style="{StaticResource SidebarButton}" Foreground="Red" Margin="0,150,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="📁 Рабочая область / Мои записи" Foreground="#666666" Margin="0,0,0,20"/>
            <Border Background="#1B5E20" Padding="10" CornerRadius="5,5,0,0">
                <TextBlock Text="МОИ ЗАПИСИ НА ПРИЁМ" Foreground="White" FontWeight="Bold"/>
            </Border>
            <DataGrid x:Name="PatientDataGrid" Height="300" BorderThickness="1" BorderBrush="#1B5E20"/>
        </StackPanel>
    </Grid>
</Page>