<Page x:Class="Policlinnic.UI.Views.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Пользователи" Background="White" FontFamily="Segoe UI">

    <Page.Resources>
        <Style x:Key="GridActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="IsTabStop" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2E7D32"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F8E9"/>
                </Trigger>

                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="IsSelected" Value="True"/>
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C8E6C9"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NonFocusableCellStyle" TargetType="DataGridCell">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="5,0">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#C8E6C9"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#C8E6C9"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black"/>
    </Page.Resources>

    <Grid Margin="20" KeyboardNavigation.TabNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Поиск" Foreground="#90A4AE" FontSize="12" Margin="0,0,0,4"/>
                <TextBox x:Name="TxtSearch" Width="250" Height="40" Padding="5" 
                         VerticalContentAlignment="Center" BorderBrush="#CFD8DC"
                         TextChanged="TxtSearch_TextChanged"
                         TabIndex="0"
                         ToolTip="Введите ФИО или логин для поиска"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Роль" Foreground="#90A4AE" FontSize="12" Margin="0,0,0,4"/>
                <ComboBox x:Name="CmbRoleFilter" Width="180" Height="40" 
                          VerticalContentAlignment="Center" BorderBrush="#CFD8DC"
                          SelectionChanged="CmbRoleFilter_SelectionChanged"
                          TabIndex="1">
                    <ComboBoxItem Content="Все роли"/>
                    <ComboBoxItem Content="Пациент" IsSelected="True"/>
                    <ComboBoxItem Content="Врач"/>
                    <ComboBoxItem Content="Админ"/>
                </ComboBox>
            </StackPanel>

            <Button Grid.Column="3" Content="+ Новый пользователь" 
                    Style="{StaticResource AddButtonStyle}" 
                    VerticalAlignment="Bottom"
                    Click="BtnAddUser_Click"
                    TabIndex="2"/>
        </Grid>

        <DataGrid x:Name="UsersGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" IsReadOnly="True" 
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#EEEEEE"
                  Background="White" BorderThickness="1" BorderBrush="#EEEEEE"
                  RowHeight="45"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  TabIndex="3">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="Foreground" Value="#607D8B"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,12"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="BorderBrush" Value="#EEEEEE"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Роль" Binding="{Binding RoleName}" Width="120" 
                                    FontWeight="SemiBold" Foreground="#2E7D32"
                                    CellStyle="{StaticResource NonFocusableCellStyle}"/>

                <DataGridTextColumn Header="ФИО Пользователя" Binding="{Binding FIO}" Width="*"
                                    CellStyle="{StaticResource NonFocusableCellStyle}"/>

                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="150"
                                    CellStyle="{StaticResource NonFocusableCellStyle}"/>

                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"
                                    CellStyle="{StaticResource NonFocusableCellStyle}"/>

                <DataGridTemplateColumn Width="100" Header="Действия">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✏️" Style="{StaticResource GridActionButton}"
                                        ToolTip="Редактировать данные"
                                        Click="BtnEdit_Click"/>

                                <Button Content="✕" Style="{StaticResource GridActionButton}"
                                        Foreground="#E53935" FontWeight="Bold"
                                        ToolTip="Удалить пользователя"
                                        Click="BtnDelete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>