<Page x:Class="Policlinnic.UI.Views.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Admin Mode" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <Border Background="#E8F5E9" CornerRadius="5" Padding="10" Margin="0,0,0,20">
                    <TextBlock Text="Admin&#x0a;ACTIVE SESSION" FontWeight="Bold" Foreground="#2E7D32"/>
                </Border>
                <Button Content="👥 Пациенты" Style="{StaticResource SidebarButton}"/>
                <Button Content="👨‍⚕️ Врачи" Style="{StaticResource SidebarButton}"/>
                <Button Content="📅 Приёмы" Style="{StaticResource SidebarButton}"/>
                <Button Content="🚪 ВЫХОД" Style="{StaticResource SidebarButton}" Foreground="Red" Margin="0,100,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" Margin="20">
            <Grid Margin="0,0,0,10">
                <TextBlock Text="📁 Рабочая область / Приёмы" VerticalAlignment="Center"/>
                <Button Content="+ НОВАЯ ЗАПИСЬ" HorizontalAlignment="Right" Background="#1B5E20" Foreground="White" Padding="10,5"/>
            </Grid>
            <Border Background="#1B5E20" Padding="10" CornerRadius="5,5,0,0">
                <TextBlock Text="ТАБЛИЦА: ПРИЁМ" Foreground="White" FontWeight="Bold"/>
            </Border>
            <DataGrid x:Name="AdminDataGrid" Height="350"/>
        </StackPanel>
    </Grid>
</Page>