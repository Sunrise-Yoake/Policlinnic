<Window x:Class="Policlinnic.UI.Views.SickLeaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Больничный лист" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Пациент:" Foreground="Gray" Margin="0,0,0,5"/>
        <ComboBox x:Name="CmbPatient" Grid.Row="1" Height="35" Margin="0,0,0,15"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Grid.Row="2" Text="Врач:" Foreground="Gray" Margin="0,0,0,5"/>
        <ComboBox x:Name="CmbDoctor" Grid.Row="3" Height="35" Margin="0,0,0,15"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Дата начала:" Foreground="Gray"/>
                <DatePicker x:Name="DpStart" Width="140" Height="30" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Дата закрытия:" Foreground="Gray"/>
                <DatePicker x:Name="DpEnd" Width="140" Height="30" Margin="0,5,0,0"/>
                <CheckBox x:Name="ChkIsOpen" Content="Больничный открыт" 
                          Margin="0,5,0,0" Checked="ChkIsOpen_Checked" Unchecked="ChkIsOpen_Unchecked"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Width="100" Height="35" Margin="0,0,10,0"
                    Background="White" BorderBrush="#DDD" Click="BtnCancel_Click"/>
            <Button Content="Сохранить" Width="100" Height="35" 
                    Background="#2E7D32" Foreground="White" FontWeight="Bold" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>