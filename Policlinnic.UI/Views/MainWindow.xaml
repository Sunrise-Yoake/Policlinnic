<Window x:Class="Policlinnic.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MedControl" Height="850" Width="1300"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        FontFamily="Segoe UI" Background="#F0F2F5">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E8F5E9"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="20,0,0,0">
                            <Grid>
                                <Rectangle x:Name="Indicator" HorizontalAlignment="Left" Width="4" Fill="#69F0AE" Visibility="Collapsed"/>
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuSeparatorStyle" TargetType="Separator">
            <Setter Property="Background" Value="#81C784"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Margin" Value="20,10,20,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36.9"/>
            <ColumnDefinition Width="32.4"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="180.7"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Grid.ColumnSpan="4">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1B5E20" Offset="0"/>
                    <GradientStop Color="#004D40" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,30,0,30" HorizontalAlignment="Left">
                    <Border Width="36" Height="36" Background="White" CornerRadius="6" Margin="0,0,12,0">
                        <TextBlock Text="✚" Foreground="#1B5E20" FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,2"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="TxtUserLogin" Text="admin" Foreground="White" FontWeight="Bold" FontSize="15"/>
                        <TextBlock x:Name="TxtRoleName" Text="Администратор" Foreground="#A5D6A7" FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <RadioButton x:Name="RbUsers" Content="Пользователи" GroupName="M" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>

                        <Separator Style="{StaticResource MenuSeparatorStyle}"/>

                        <RadioButton x:Name="RbAppointments" Content="Приёмы" GroupName="M" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>
                        <RadioButton x:Name="RbSickLeaves" Content="Больничные" GroupName="M" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>

                        <Separator Style="{StaticResource MenuSeparatorStyle}"/>

                        <RadioButton x:Name="RbDictionaries" Content="Справочники"  GroupName="M" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>
                        <RadioButton x:Name="RbReports" Content="Отчёты" GroupName="M" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>
                        <RadioButton x:Name="RbStatistics" Content="Статистика" GroupName="M" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <Button Grid.Row="2" Content="ВЫХОД" Margin="20,20" Height="35" 
                        Background="#D32F2F" Foreground="White" FontWeight="Bold" BorderThickness="0" 
                        Click="BtnLogout_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Column="4" Background="#F5F7FA">
            <Grid>
                <Border Background="White" Height="60" VerticalAlignment="Top" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <TextBlock x:Name="TxtPageTitle" Text="Главная" VerticalAlignment="Center" Margin="30,0" 
                               FontSize="18" FontWeight="SemiBold" Foreground="#37474F"/>
                </Border>

                <Frame x:Name="MainFrame" Margin="20,80,20,20" NavigationUIVisibility="Hidden"/>
            </Grid>
        </Border>
    </Grid>
</Window>