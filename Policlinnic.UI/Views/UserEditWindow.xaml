<Window x:Class="Policlinnic.UI.Views.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователь" Height="750" Width="550"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#F5F7FA">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#455A64"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="BorderBrush" Value="#CFD8DC"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid FocusManager.FocusedElement="{Binding ElementName=TxtLogin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="30,20,30,10">
            <StackPanel>

                <TextBlock Text="УЧЕТНАЯ ЗАПИСЬ" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10" FontSize="14"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Логин *"/>
                        <TextBox x:Name="TxtLogin" TabIndex="0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Пароль *"/>
                        <TextBox x:Name="TxtPassword" TabIndex="1"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Телефон"/>
                <TextBox x:Name="TxtPhone" TabIndex="2"/>

                <TextBlock Text="Роль *"/>
                <ComboBox x:Name="CmbRole" SelectionChanged="CmbRole_SelectionChanged" TabIndex="3">
                    <ComboBoxItem Content="Пациент" IsSelected="True"/>
                    <ComboBoxItem Content="Врач"/>
                    <ComboBoxItem Content="Админ"/>
                </ComboBox>

                <Separator Margin="0,5,0,15" Background="#E0E0E0"/>

                <TextBlock Text="ЛИЧНЫЕ ДАННЫЕ" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10" FontSize="14"/>

                <TextBlock Text="ФИО Полностью *"/>
                <TextBox x:Name="TxtFIO" ToolTip="Иванов Иван Иванович" TabIndex="4"/>

                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Дата рождения *"/>
                        <DatePicker x:Name="DpBirth" TabIndex="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Пол *"/>
                        <ComboBox x:Name="CmbGender" TabIndex="6">
                            <ComboBoxItem Content="Мужской" IsSelected="True"/>
                            <ComboBoxItem Content="Женский"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <StackPanel x:Name="PanelPatient" Visibility="Visible">
                    <TextBlock Text="Адрес проживания *"/>
                    <TextBox x:Name="TxtAddress" TabIndex="7"/>
                </StackPanel>

                <StackPanel x:Name="PanelEmployee" Visibility="Collapsed">
                    <TextBlock Text="Стаж работы (лет) *"/>
                    <TextBox x:Name="TxtExperience" PreviewTextInput="NumberValidationTextBox" TabIndex="8"/>

                    <StackPanel x:Name="PanelDoctorSpec" Visibility="Collapsed">
                        <TextBlock Text="Специализация *"/>
                        <ComboBox x:Name="CmbSpecialization" Margin="0,0,0,10"
                                  DisplayMemberPath="Name" SelectedValuePath="Id"
                                  TabIndex="9"/>
                    </StackPanel>
                </StackPanel>

                <Border Height="10"/>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Width="120" Height="40" Background="Transparent" 
                        BorderBrush="#90A4AE" Click="BtnCancel_Click" Margin="0,0,15,0"
                        TabIndex="10" Cursor="Hand"/>

                <Button Content="СОХРАНИТЬ" Width="150" Height="40" Background="#2E7D32" 
                        Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Click="BtnSave_Click"
                        TabIndex="11" IsDefault="True" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>